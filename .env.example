# Backend Environment Variables Example
# Copy this file to .env and update with your values

# PostgreSQL Database Connection
POSTGRES=postgresql://username:password@localhost:5432/database_name
POSTGRES_TEST=postgresql://username:password@localhost:5432/test_database

# Authentication
INITIAL_PASSWORD=change_this_password
JWT_SECRET=your_jwt_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development

# External Sync Configuration (Optional)
# HDM_SYNC_ADAPTER=openspp
# OPENSPP_SYNC_ADAPTER_URL=http://localhost:8069
# OPENSPP_DB_NAME=your_db_name
# OPENSPP_USER=admin
# OPENSPP_PASSWORD=your_password