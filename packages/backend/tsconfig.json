{
  "compilerOptions": {
    "isolatedModules": true,
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["jest", "node"],
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@idpass/data-collect-core": ["../datacollect/dist/types/index.d.ts"],
      "@idpass/data-collect-core/*": ["../datacollect/dist/types/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "dist"],
}
