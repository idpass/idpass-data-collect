{
  "name": "@idpass/data-collect-backend",
  "version": "1.0.0",
  "description": "Library to support offline data capture for a beneficiary management system",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --silent",
    "dev": "nodemon",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/public/**/* dist && copyfiles openapi.yaml dist/",
    "build": "npm run clean && tsc --project tsconfig.json && npm run copy-files",
    "format": "prettier --write .",
    "validate-api": "swagger-codegen-cli validate -i openapi.yaml",
    "serve-docs": "swagger-ui-serve openapi.yaml",
    "api-docs": "echo 'API documentation available at http://localhost:3000/api-docs when server is running'",
    "lint": "eslint . --config eslint.config.mjs",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@types/multer": "^1.4.12",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "@idpass/data-collect-core": "workspace:*",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.13.1",
    "qrcode": "^1.5.4",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.10",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "copyfiles": "^2.4.1",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "nodemon": "^3.1.7",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sucrase": "^3.35.0",
    "supertest": "^7.0.0",
    "swagger-codegen-cli": "^2.2.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idpass/idpass-data-collect.git"
  },
  "keywords": [
    "household-data-management",
    "offline-data-sync",
    "data-management"
  ],
  "author": "IDPass",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/idpass/idpass-data-collect/issues"
  },
  "homepage": "https://github.com/idpass/idpass-data-collect/blob/main/README.md"
}